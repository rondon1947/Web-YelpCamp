<%- include('../partials/header'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">
            Add a new Campground here..
        </h1>
        <div style="width: 30%; margin: 35px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Campground Name">
                </div>    
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div>
                    <input class="form-control" type="text" name="description" placeholder="Campground Description">
                </div>    
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block" style="margin-top: 18px">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds"><button class="btn btn-primary">Go Back</button></a>
        </div>
    </div>
</div>

<%- include('../partials/footer'); -%>