<%- include('../partials/header'); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">
            Edit your review here..
        </h1>
        <div style="width: 30%; margin: 35px auto;">
            <form action="/campgrounds/<%= campground_id %>/reviews/<%= review._id %>/update?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[text]" value="<%= review.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block" style="margin-top: 18px">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>"><button class="btn btn-primary">Go Back</button></a>
        </div>
    </div>
</div>

<%- include('../partials/footer'); -%>